<h3>投稿詳細</h3>
<div class="tweet">
    <a href="/users/<%= @tweet.user.id %>"><%= @tweet.user.name %></a>
    <%= @tweet.body %>
    <br>
    <%= @tweet.city %>
    <br>
    <%= image_tag @tweet.image_url, size: "250x200" if @tweet.image? %>
    <br>
    <%= @tweet.created_at.to_s(:datetime_jp) %>

    <% if user_signed_in? %>
        <% if current_user.already_liked?(@tweet) %>
            <%= link_to tweet_like_path(@tweet), method: :delete do %>
                <i class="fas fa-paw"></i><%= @tweet.likes.count %>
            <% end %>
        <% else %>
            <%= link_to tweet_likes_path(@tweet), method: :post do %>
                <i class="fas fa-paw"></i><%= @tweet.likes.count %>
            <% end %>
        <% end %>
    <% else %>
        <i class="fas fa-paw"></i><%= @tweet.likes.count %>
    <% end %>
</div>

<div id='map'></div>

<style>
#map {
  height: 600px;
  width: 100%;
}
</style>

<!-- js部分 -->
<script>
//初期マップの設定
let map
let marker
function initMap(){
  geocoder = new google.maps.Geocoder()

  map = new google.maps.Map(document.getElementById('map'), {
    center:  {lat: <%= @tweet.lat %>, lng: <%= @tweet.lng %>},
    zoom: 15,
  });

   marker = new google.maps.Marker({
    position:  {lat: <%= @tweet.lat %>, lng: <%= @tweet.lng %>},
    map: map
  });
}
</script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC3zvDbgIMXQ9dUPkwLNblX75tAyVmM7n4&callback=initMap" async defer></script>

<%= link_to "編集", edit_tweet_path(@tweet.id) %>

<h2>いいねしたユーザー</h2>
<% @tweet.liked_users.each do |user| %>
    <li><%= user.name unless @tweet.user.blank? %></li>
<% end %>

<div class="comment-wrapper">
    <p>コメント一覧</p>
    <% @comments.each do |c| %>
        <div>
            <%= c.user.name unless c.user.blank? %>
            <br>
            <%= c.content %>
        </div>
            <br>
    <% end %>

    <% if user_signed_in? %>
        <%= form_with(model:[@tweet, @comment], local: true) do |f| %>
            <%= f.text_area :content %>
            <%= button_tag type: "submit" do %>
                <i class="far fa-comments"></i> コメントする
            <% end %>
        <% end %>
    <% end %>
</div>

<%= link_to "投稿一覧", tweets_path %>