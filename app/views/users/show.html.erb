<p>名前 : <%= @user.name %></p>
<p>プロフィール : <%= @user.profile %></p>

<% if current_user.id == @user.id %>
    <%= link_to "ユーザー情報の編集", edit_user_registration_path %>
<% end %>

<h2>ユーザーの投稿一覧</h2>
<% @user.tweets.each do |t| %>
    <p><%= t.user.name %></p>
    <p><%= t.body %></p>
    <p><%= image_tag t.image_url, size: "250x200" if t.image? %></p>
    <% if user_signed_in? %>
            <% if current_user.already_liked?(t) %>
                <%= link_to tweet_like_path(id: t.id, tweet_id: t.id), method: :delete do %>
                    <i class="fas fa-paw"></i><%= t.likes.count %>
                <% end %>
            <% else %>
                <%= link_to tweet_likes_path(id: t.id, tweet_id: t.id),method: :post do %>
                    <i class="fas fa-paw"></i><% t.likes.count %>
                <% end %>
            <% end %>
        <% else %>
            <i class="fas fa-paw"></i><%= t.likes.count %>
        <% end %>
        <i class="far fa-comments"></i><%= t.comments.count %>
        <br>
            <%= t.created_at.to_s(:datetime_jp) %>
            <%= link_to "詳細", tweet_path(t.id) %>
<% end %>

<p><%= link_to "投稿一覧に戻る", tweets_path %></p>